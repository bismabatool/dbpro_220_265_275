            <label>Employee Installment Per Month <small>(EMI)</small></label>
            <div>
                <input class="form-control input-lg" name="EMI" type="number"
                       placeholder="5000" min="0"/>
                @Html.ValidationMessageFor(model => model.EMI, "", new { @class = "text-danger" })
            </div>
        </div>*@

                <div class="form-group text-center m-b-0">
                    <button style="float:right" type="submit" class="btn btn-primary btn-block waves-effect waves-light">
                        Verify
                    </button>
                </div>
            </div>
            }
        </div>
    </div>
</div>
