@model WebApplication3.LoanStatu

@{
    ViewBag.Title = "VerifyLoan";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="col-xl-8 center-page">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title m-t-0">Loan Application Form</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                <div>@Html.HiddenFor(model => model.ApplicationID)</div>
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Amount of Loan </label>
                    <div>
                        @Html.EditorFor(model => model.PrincipleAmount, new { htmlAttributes = new { @class = "form-control form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.PrincipleAmount, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <label>Tenure <small>(No. of years in which loan to be returned)</small></label>
                    <div>
                        @Html.EditorFor(model => model.Tenure, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.Tenure, "", new { @class = "text-danger" })
                    </div>
                </div>

