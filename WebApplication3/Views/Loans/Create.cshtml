@model WebApplication3.Loan

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="col-xl-8 mx-auto">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title m-t-0">Create Loan Category</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Loan Type</label>
                        <div>
                            @Html.EditorFor(model => model.LoanType, new { htmlAttributes = new { @class = "form-control input-lg" } })
                            @Html.ValidationMessageFor(model => model.LoanType, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Interest Rate</label>
                        <div>
                            @Html.EditorFor(model => model.InterestRate, new { htmlAttributes = new { @class = "form-control input-lg" } })
                            @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Maximum Amount <small>(that can be lended)</small></label>
                        <div>
                            @Html.EditorFor(model => model.MaxAmount, new { htmlAttributes = new { @class = "form-control input-lg" } })
                            @Html.ValidationMessageFor(model => model.MaxAmount, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center m-b-0">
                        <div>
                            <button style="float:right" type="submit" class="btn btn-primary waves-effect waves-light">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            }
            </div>
    </div>
</div>