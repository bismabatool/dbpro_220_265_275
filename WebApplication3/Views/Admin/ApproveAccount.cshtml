@model WebApplication3.Models.DesignationViewModel

@{
    ViewBag.Title = "ApproveAccount";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<h2>ApproveAccount</h2>

<div class="col-xl-8 mx-auto">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title m-t-0">Assign Employee Designation</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2>@Html.DisplayFor(model => model.Cnic)</h2>
                <h2>@Html.DisplayFor(model => model.Email)</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label>Designation</label>
                    <div>
                        @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Salary</label>
                    <div>
                        @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group text-center m-b-0">
                    <div>
                        <button style="float:right" type="submit" class="btn btn-primary waves-effect waves-light">
                            Add Credentials
                        </button>
                    </div>
                </div>
            </div>
            }
            </div>
</div>
</div>