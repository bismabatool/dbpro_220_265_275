@model IEnumerable < WebApplication3.Models.company >

@{
    ViewBag.Title = "CompanyRequests";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">COMPANY REQUESTS</h4>
                        <!-- <p class="category">Here is a subtitle for this table</p> -->
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Sr. No.</th>
                            <th>Company Name</th>
                            <th>Description</th>
                            <th>Registration Date</th>
                            <th>Approval</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>{counter++}</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ceo)
                                        </td>
                                        <td>email@gmail.com</td>
                                        <td><button class="btn btn-light">APPROVE</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
